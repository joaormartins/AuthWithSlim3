{% extends 'templates/app.twig' %}


{% block content %}
<div class="row">
	<div class="col-md-6">
		<h3>Registrar-Se</h3>
		<form class="form" method="post" action="{{ path_for('auth.register') }}">

			<div class="form-group">
				<label>Nome de Usuario:</label>
				<input type="text" name="username" class="form-control" value="{{ old.username }}" maxlength="15">
			</div>

			<div class="form-group">
				<label>Email:</label>
				<input type="email" name="email" class="form-control" value="{{ old.email }}" placeholder="usuario@exemplo.com">
			</div>

			<div class="form-group">
				<label>Senha:</label>
				<input type="password" name="password" class="form-control" value="{{ old.password }}">
			</div>

			<div class="form-group">
				<label>Confirme a senha:</label>
				<input type="password" name="password_confirm" class="form-control" placeholder="Confirme">
			</div>

			{{ csrf.field | raw }}

			<div>
				<input type="submit" value="Cadastrar" class="btn btn-primary">
			</div>
		</form>
	</div>
</div>
{% endblock %}