{% extends 'templates/app.twig' %}


{% block content %}
<div class="row justify-content-center">
	<div class="col-md-6">
		<form class="form" method="post" action="{{ path_for('auth.register') }}">

			<div class="form-group">
				<label>Username:</label>
				<input type="text" name="username" class="form-control" value="{{ old.username }}" maxlength="15" placeholder="Username">
			</div>

			<div class="form-group">
				<label>Email:</label>
				<input type="email" name="email" class="form-control" value="{{ old.email }}" placeholder="@">
			</div>

			<div class="form-group">
				<label>Password:</label>
				<input type="password" name="password" class="form-control" value="{{ old.password }}" placeholder="***">
			</div>

			<div class="form-group">
				<label>Confirm password:</label>
				<input type="password" name="password_confirm" class="form-control" placeholder="Confirm">
			</div>

			<div class="mt-4">
				<input type="submit" value="Register" class="btn btn-primary">
			</div>
		</form>
	</div>
</div>
{% endblock %}